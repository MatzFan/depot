<!-- apply id to the row if this is the current item for JS UI sexiness to happen -->
<% if line_item == @current_item %>
  <tr id='current_item'>
<% else %>
  <tr>
<% end %>
    <!-- line_item variable is defined by naming convention! It is current object -->
    <td><%= line_item.quantity %>&times;</td>
    <td><%= line_item.product.title %></td>
    <td class='item_price'><%= number_to_currency(line_item.total_price) %></td>
  </tr>
